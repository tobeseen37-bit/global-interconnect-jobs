{
  "manifest_version": 3,
  "name": "Global Inter-Connect Jobs",
  "version": "1.0",
  "description": "Connecting the global workforce through one extension. Find jobs abroad that accept international travelers.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://remotive.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["jobs.json"],
      "matches": ["<all_urls>"]
    }
  ]
}


