{
  "name": "Global Inter-Connect Jobs",
  "description": "Find remote and local job opportunities worldwide.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://remotive.io/*",
    "https://api.adzuna.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}




