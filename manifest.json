{
  "manifest_version": 3,
  "name": "Global Inter-Connect Jobs",
  "version": "1.0",
  "description": "Connecting the global workforce through one extension. Find jobs abroad or remote opportunities.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://remotive.com/*",
    "https://api.adzuna.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}




